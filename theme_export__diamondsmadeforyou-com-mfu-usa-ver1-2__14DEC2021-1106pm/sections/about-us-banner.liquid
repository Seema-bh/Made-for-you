<div class="about-us-banner">
  <div class="container"> 
    <div class="right-side-image mobile-xs">
      <img src="{{section.settings.image_picker | img_url:'master' }}" class="lazyload">
    </div>
    <div class="left-side-text desktop-xs">
      {% if section.settings.title != blank %}
      <h2 class="title">{% include 'multilang' with section.settings.title %}</h2>
      {% endif %}
      {% if section.settings.content != blank %}
      <div class="content">
        {% include 'multilang' with section.settings.content %}
      </div>
      {% endif %}
    </div>
    <div class="right-side-image desktop-xs">
      <img src="{{section.settings.image_picker | img_url:'master' }}" class="lazyload">
    </div>
    <div class="left-side-text mobile-xs">
      {% if section.settings.title != blank %}
      <h2 class="title">{% include 'multilang' with section.settings.title %}</h2>
      {% endif %}
      {% if section.settings.content != blank %}
      <div class="content">
        {% include 'multilang' with section.settings.content %}
      </div>
      {% endif %}
    </div>
  </div>
</div>
