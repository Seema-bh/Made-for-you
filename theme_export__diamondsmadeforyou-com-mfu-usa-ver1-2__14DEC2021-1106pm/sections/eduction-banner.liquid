{% if section.settings.enable %}
<section class="block-one-banner education" id="banner-{{section.id}}">
  <div class="container">
    <div class="block-container">
      {% if  section.settings.image != blank %}
      <div class="banner-img">
        {%- assign img_url =  section.settings.image | img_url:'1500x' | crop:'center' -%}
        <img data-src={{img_url}} alt="{{ section.settings.image.alt | default: shop.name }}" class="lazyload desktop-xs">
        
        {% if section.settings.image_slide_mb != blank %}

        {%- assign img_url_mb = section.settings.image_slide_mb | img_url: 'master' -%}

        <img data-src="{{ img_url_mb }}"
             src="https:{{ img_url_mb }}" alt="{{ section.settings.image_slide_mb.alt | default: shop.name }}" itemprop="logo"
             class="lazyautosizes lazyloaded mobile-xs" data-sizes="auto">
        {% endif %}
      </div>
      <div class="custom-content">
        {% if  section.settings.title != blank %}
        <h3 class="title">
          {% include 'multilang' with section.settings.title %}
        </h3>
        {% endif %}
        {% if section.settings.sub_title!= blank %}
        <p class="sub-title">
          {% include 'multilang' with section.settings.sub_title %}
        </p>
        {% endif %}
        {% if section.settings.banner_des != blank %}
        <div class="des rte">
          {% include 'multilang' with section.settings.banner_des %}
        </div>
        {% endif %}
        {% if section.settings.text_button != blank %}
        <a href="{{section.settings.link_button}}" class="btn btn-banner">
          {% include 'multilang' with section.settings.text_button %}
        </a>
        {% endif %}
      </div>
      <div class="link-custom">
        <ul class="link-items">
          {% for block in section.blocks %}
          <li class="item">
            <a href="{{block.settings.link}}">{% include 'multilang' with block.settings.link_title %}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% else %}
      <div class="no-image" style="padding-top: 43.33%;  font-size:20px"><span>1200X520px</span></div>
      {% endif %}
    </div>
  </div>
</section>
<style>
  {% assign bor_color =  section.settings.bor_color %}
  {% assign sub_title_color =  section.settings.sub_title_color %}
  {% assign title_color =  section.settings.title_color %}
  {% assign des_color =  section.settings.des_color %}
  {% assign text_button_color =  section.settings.text_button_color %}
  {% assign back_button =  section.settings.back_button %}
  {% assign color_border = section.settings.color_border %}

  #banner-{{section.id}} .block-container{
    border-color:{{color_border}};
  }
  {% unless  section.settings.enable_border%}
  #banner-{{section.id}} .block-container{
    border:none;
  }
  {% endunless %}
  #banner-{{section.id}} .custom-content .sub-title{
    color:{{sub_title_color}};
  }
  #banner-{{section.id}} .custom-content .title{
    color:{{title_color}};
  }
  #banner-{{section.id}} .custom-content .des{
    color:{{des_color}};
  }
  #banner-{{section.id}} .custom-content .btn-banner{
    color:{{text_button_color}};
    background:{{back_button}};
    border-color:{{bor_color}};
  }
  #banner-{{section.id}} .link-custom .item a{
    color:{{section.settings.color_title}};
  }
  #banner-{{section.id}} .link-custom .item a span:before{
    background:{{section.settings.color_title}};
  }
  #banner-{{section.id}} .link-custom .item a:hover{
    color:{{section.settings.color_title_hv}};
  }
  #banner-{{section.id}} .link-custom .item a:hover span:before{
    background:{{section.settings.color_title_hv}};
  }


  @media (max-width: 767px) {
    .block-one-banner {
      margin-bottom: {{ section.settings.margin_bottom_mb }}px;
    }
  }

  @media (min-width: 768px) and (max-width: 1199px) {
    .block-one-banner {
      margin-bottom: {{ section.settings.margin_bottom_tab }}px;
    }
  }

  @media (min-width: 1200px) {
    .block-one-banner {
      margin-bottom: {{section.settings.margin_bottom}}px;
    }
  }	
</style>
{% endif  %}
