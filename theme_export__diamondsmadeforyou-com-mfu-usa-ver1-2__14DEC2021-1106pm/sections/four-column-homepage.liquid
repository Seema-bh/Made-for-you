<div class="four-column-homepage container">
  <div class="first-banner-content desktop-xs">
    {%if section.settings.image_logo_1 != blank%}
    <div class="logo-banner">
      {%- assign url_img_logo1 = section.settings.image_logo_1 | img_url:'400x'-%}
      <img data-src="{{url_img_logo1}}" alt="{{section.settings.image_logo_1.alt | default: shop.name}}" {% include 'lazyload'%}>
    </div>
    {% endif %}
    {% if section.settings.title != blank %}
    <h3 class="title" style="color:{{section.settings.title_color}}">
      {% include 'multilang' with section.settings.title%}
    </h3>
    {% endif %}
    {% if section.settings.des != blank %}
    <div class="content rte" style="color:{{section.settings.des_color}}">
      {% include 'multilang' with section.settings.des%}
    </div>
    {% endif %}
    {% if section.settings.link_text != blank %}
    <div class="learn-more">
      <a href=" {{section.settings.link}}" class="link-banner"  style="color:{{section.settings.link_color |color_modify: 'alpha', 0.5 }}">{% include 'multilang' with section.settings.link_text %}</a>
    </div>
    {% endif%}
  </div>

  <div class="second-banner-content mobile-xs">
    {% if section.settings.image_1 != blank%}
    <div class="mansory-item-wrapper">
      <a href="{{section.settings.link_1}}" class="mansory-item">
        {%- assign url_img_1 = section.settings.image_1 | img_url:'600x'-%}
        <img data-src="{{url_img_1}}" alt="{{section.settings.image_1.alt | default: shop.name}}" {% include 'lazyload'%}>
      </a>
      {% endif %}
    </div>
  </div>

  <div class="second-banner-content desktop-xs">
    {% if section.settings.image_1 != blank%}
    <div class="mansory-item-wrapper">
      <a href="{{section.settings.link_1}}" class="mansory-item">
        {%- assign url_img_1 = section.settings.image_1 | img_url:'600x'-%}
        <img data-src="{{url_img_1}}" alt="{{section.settings.image_1.alt | default: shop.name}}" {% include 'lazyload'%}>
      </a>
      {% endif %}
    </div>
  </div>
  <div class="first-banner-content mobile-xs">
    {%if section.settings.image_logo_1 != blank%}
    <div class="logo-banner">
      {%- assign url_img_logo1 = section.settings.image_logo_1 | img_url:'400x'-%}
      <img data-src="{{url_img_logo1}}" alt="{{section.settings.image_logo_1.alt | default: shop.name}}" {% include 'lazyload'%}>
    </div>
    {% endif %}
    {% if section.settings.title != blank %}
    <h3 class="title" style="color:{{section.settings.title_color}}">
      {% include 'multilang' with section.settings.title%}
    </h3>
    {% endif %}
    {% if section.settings.des != blank %}
    <div class="content rte" style="color:{{section.settings.des_color}}">
      {% include 'multilang' with section.settings.des%}
    </div>
    {% endif %}
    {% if section.settings.link_text != blank %}
    <div class="learn-more">
      <a href=" {{section.settings.link}}" class="link-banner"  style="color:{{section.settings.link_color |color_modify: 'alpha', 0.5 }}">{% include 'multilang' with section.settings.link_text %}</a>
    </div>
    {% endif%}
  </div>
</div>

