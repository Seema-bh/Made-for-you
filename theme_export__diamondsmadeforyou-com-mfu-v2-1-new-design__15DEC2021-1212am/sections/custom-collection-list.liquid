<section class="section-spacing">
  <div class="page-width">
    {% include 'section-header' %}
    <div class="collection-list-slider custom-slider">
      {% for block in section.blocks %}
      <div class="list-item text-center">
        {% if block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}">
        {% endif %}
          <div class="image-wrapper">
            <img class="lazyload"
                 src="{{ block.settings.image | img_url: 'master' }}"
                 data-src="{{ block.settings.image | img_url:"master" }}"
                 data-sizes="auto"
                 alt="" />
          </div>
          <div class="content">
            {% if block.settings.collection_title != blank %}
            <h3>{{ block.settings.collection_title }}</h3>
            {% endif %}
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <span class="btn-arrow">
              {{ block.settings.button_label }}
              {% include 'icon-btn-arrow' %}
            </span>
            {% endif %}
          </div>
        {% if block.settings.button_link != blank %}
        </a>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Collection list",
	"class": "custom-collection-list",
    "settings": [
      {
		"type": "text",
		"id": "title",
		"label": "Title",
		"default": "Title"
      },
	  {
		"type": "text",
		"id": "sub_title",
		"label": "Subtitle",
		"default": "Subtitle"
      }
	],
	"blocks": [
      {
        "type": "collection_block",
        "name": "Column",
		"settings": [
          {
			"type": "image_picker",
			"id": "image",
			"label": "Image",
			"info": "Recommended size: 373px * 466px"
          },
          {
            "type": "text",
            "id": "collection_title",
            "label": "Collection title",
            "default": "Collection title"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Discover"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
		]
      }
	],
    "presets": [
      {
        "name": "Custom collection list",
        "category": "Text"
      }
    ]
  }
{% endschema %}

