<section class="section-spacing">
  <div class="page-width">
    <div class="grid">
      <div class="grid__item small--one-whole grid__item-text">
        {% include 'section-header' %}
      </div>
      <div class="grid__item small--one-whole grid__item-slider">
        <div class="grid gifts-purpose-slider">
          {% for block in section.blocks %}
          <div class="grid__item">
            {% if block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}">
              {% endif %}
              {% assign image = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
              <div class="image-wrapper absolute-image-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100}}%;">
                <img class="lazyload"
                     data-src="{{ image }}"
                     data-widths="[180, 360, 375, 414, 540, 720]"
                     data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                     data-sizes="auto"
                     alt="" />
              </div>
              <div class="content text-center">
                {% if block.settings.title != blank %}
                <h3>{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <span class="btn-arrow btn-arrow-small btn-arrow-brown">
                  {{ block.settings.button_label }}
                  {% include 'icon-btn-arrow' %}
                </span>
                {% endif %}
              </div>
              {% if block.settings.button_link != blank %}
            </a>
            {% endif %}
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Gifts purpose",
	"class": "gifts-purpose-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title"
      }
	],
	"blocks": [
      {
        "type": "column",
        "name": "Column",
		"settings": [
          {
			"type": "image_picker",
			"id": "image",
			"label": "Image",
			"info": "Recommended size: 496px * 496px"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Column title",
            "default": "Title"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Discover"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
		]
      }
	]
  }
{% endschema %}

