{% if section.settings.enable_section %}
<div class="section-spacing">
  <section>
    <div class="page-width">
      <div class="section-wrapper">
        <div class="images-wrapper-top">
          {% assign image_1 = section.settings.image_1 | img_url: 'master' %}
          <div class="image-wrapper">
            <img class="lazyload" 
                 src="{{ image_1 }}"
                 data-src="{{ image_1 }}" 
                 data-sizes="auto" 
                 alt="" />
          </div>
          {% assign image_2 = section.settings.image_2 | img_url: 'master' %}
          <div class="image-wrapper">
            <img class="lazyload" 
                 src="{{ image_2 }}"
                 data-src="{{ image_2 }}" 
                 data-sizes="auto" 
                 alt="" />
          </div>
        </div>
        <div class="content-wrapper">
          <div class="content text-center">
            {% include 'section-header' %}
            {% if section.settings.text != blank %}
            {{ section.settings.text }}
            {% endif %}
          </div>
        </div>
        <div class="images-wrapper-bottom">
          {% assign image_3 = section.settings.image_3 | img_url: 'master' %}
          <div class="image-wrapper">
            <img class="lazyload" 
                 src="{{ image_3 }}"
                 data-src="{{ image_3 }}" 
                 data-sizes="auto" 
                 alt="" />
          </div>
          {% assign image_4 = section.settings.image_4 | img_url: 'master' %}
          <div class="image-wrapper">
            <img class="lazyload" 
                 src="{{ image_4 }}"
                 data-src="{{ image_4 }}" 
                 data-sizes="auto" 
                 alt="" />
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
{% endif %}

{% schema %}
  {
    "name": "Four images with content",
    "class": "ow-four-images-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      },
      {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
      },
      {
        "type": "image_picker",
        "id": "image_4",
        "label": "Image 4"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Text goes here.</p>"
      }
    ]
  }
{% endschema %}