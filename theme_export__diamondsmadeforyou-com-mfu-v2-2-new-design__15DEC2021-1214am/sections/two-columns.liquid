<section class="section-spacing">
  <div class="page-width">
    {% include 'section-header' %}
    <div class="grid">
      {% for block in section.blocks %}
      <div class="grid__item medium-up--one-half">
        {% if block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}">
        {% endif %}
          <div class="image-wrapper">
            <img class="lazyload"
                 src="{{ block.settings.image | img_url: 'master' }}"
                 data-src="{{ block.settings.image | img_url:"master" }}"
                 data-sizes="auto"
                 alt="" />
            {% if block.settings.column_title != blank %}
            <h3>{{ block.settings.column_title }}</h3>
            {% endif %}
          </div>
          <div class="content text-center">
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <span class="btn-arrow btn-arrow-small">
              {{ block.settings.button_label }}
              {% include 'icon-btn-arrow' %}
            </span>
            {% endif %}
          </div>
        {% if block.settings.button_link != blank %}
        </a>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Two columns",
	"class": "two-columns-section",
	"max_blocks": 2,
    "settings": [
	  {
		"type": "text",
		"id": "title",
		"label": "Title",
		"default": "Title"
      },
	  {
		"type": "text",
		"id": "sub_title",
		"label": "Subtitle",
		"default": "Subtitle"
      }
	],
	"blocks": [
      {
        "type": "column",
        "name": "Column",
		"settings": [
          {
			"type": "image_picker",
			"id": "image",
			"label": "Image",
			"info": "Recommended size: 610px * 580px"
          },
          {
            "type": "text",
            "id": "column_title",
            "label": "Column title",
            "default": "Column title"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Discover"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
		]
      }
	],
    "presets": [
      {
        "name": "Two columns",
        "category": "Image"
      }
    ]
  }
{% endschema %}

