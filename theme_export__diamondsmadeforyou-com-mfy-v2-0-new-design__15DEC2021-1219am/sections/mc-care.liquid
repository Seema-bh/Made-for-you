<div class="section-spacing">
  <div class="page-width">
    {% if section.settings.title != blank %}
    <div class="section-header small--text-left medium-up--text-center">
      <h2 class="title">{{ section.settings.title }}</h2>
      {% if section.settings.text != blank %}
      <div class="text">{{ section.settings.text }}</div>
      {% endif %}
    </div>
    {% endif %}
    
    <div class="grid grid-top">
      <div class="grid__item medium-up--one-half grid__item-image-one">
        {% assign banner_1 = section.settings.banner_1 | img_url: 'master' %}
        <div class="image-wrapper">
          <img class="lazyload" 
               src="{{ banner_1 }}"
               data-src="{{ banner_1 }}" 
               data-sizes="auto" 
               alt="" />
        </div>
      </div>
      <div class="grid__item medium-up--one-half grid__item-content-one">
        <div class="content">
          {% if section.settings.content_one != blank %}
          {{ section.settings.content_one }}
          {% endif %}
        </div>
      </div>
    </div>
    
    <div class="grid grid-bottom">
      <div class="grid__item medium-up--one-half grid__item-image-two">
        {% assign banner_2 = section.settings.banner_2 | img_url: 'master' %}
        <div class="image-wrapper">
          <img class="lazyload" 
               src="{{ banner_2 }}"
               data-src="{{ banner_2 }}" 
               data-sizes="auto" 
               alt="" />
        </div>
      </div>
      <div class="grid__item medium-up--one-half grid__item-content-two">
        <div class="content">
          {% if section.settings.content_two != blank %}
          {{ section.settings.content_two }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Care",
	"class": "mc-care",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section",
		"default": true
      },
	  {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
	  {
        "type": "richtext",
        "id": "text",
        "label": "Text",
		"default": "<p>Text goes here</p>"
      },
      {
        "type": "header",
        "content": "Content 1"
      },
      {
        "type": "textarea",
        "id": "content_one",
        "label": "Content 1",
		"default": "Content 1"
      },
      {
        "type": "image_picker",
        "id": "banner_1",
        "label": "Banner 1",
        "info": "Recommended size 610x510 (px)"
      },
      {
        "type": "header",
        "content": "Content 2"
      },
      {
        "type": "textarea",
        "id": "content_two",
        "label": "Content 2",
		"default": "Content 2"
      },
      {
        "type": "image_picker",
        "id": "banner_2",
        "label": "Banner 2",
        "info": "Recommended size 610x510 (px)"
      }
	]
  }
{% endschema %}

