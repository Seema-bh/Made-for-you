<div class="section-spacing">
  <div class="page-width">
    <div class="grid">
      <div class="grid__item grid__item-content">
        <div class="content small--text-center">
          {% if section.settings.title != blank %}
          <h2>{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
          <div class="text">{{ section.settings.text }}</div>
          {% endif %}
        </div>
      </div>
      <div class="grid__item grid__item-images">
        <div class="grid">
          <div class="grid__item small--one-half single-image">
            {% assign banner_1 = section.settings.banner_1 | img_url: 'master' %}
            <div class="image-wrapper image-1">
              <img class="lazyload" 
                   src="{{ banner_1 }}"
                   data-src="{{ banner_1 }}" 
                   data-sizes="auto" 
                   alt="" />
            </div>
          </div>
          <div class="grid__item small--one-half two-images">
            {% assign banner_2 = section.settings.banner_2 | img_url: 'master' %}
            <div class="image-wrapper image-2">
              <img class="lazyload" 
                   src="{{ banner_2 }}"
                   data-src="{{ banner_2 }}" 
                   data-sizes="auto" 
                   alt="" />
            </div>
            {% assign banner_3 = section.settings.banner_3 | img_url: 'master' %}
            <div class="image-wrapper image-3">
              <img class="lazyload" 
                   src="{{ banner_3 }}"
                   data-src="{{ banner_3 }}" 
                   data-sizes="auto" 
                   alt="" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Our design",
	"class": "ab-our-design",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section",
		"default": true
      },
	  {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
		"default": "<p>Description goes here.</p>"
      },
      {
        "type": "image_picker",
        "id": "banner_1",
        "label": "Banner 1",
        "info": "Recommended size 333x333 (px)"
      },
      {
        "type": "image_picker",
        "id": "banner_2",
        "label": "Banner 2",
        "info": "Recommended size 328x366 (px)"
      },
      {
        "type": "image_picker",
        "id": "banner_3",
        "label": "Banner 3",
        "info": "Recommended size 356x257 (px)"
      }
	]
  }
{% endschema %}

