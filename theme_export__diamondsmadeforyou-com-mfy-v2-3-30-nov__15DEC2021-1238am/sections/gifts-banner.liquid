<!-- gifts-banner.liquid -->

{% include 'gifts-banner' %}

{% schema %}
  {
    "name": "Banner",
    "class": "gifts-banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section",
		"default": true
      },
      {
        "type": "image_picker",
        "id": "banner_large",
        "label": "Banner Image (Desktop)",
        "info": "Recommended size 1240x480 (px)"
      },
      {
        "type": "image_picker",
        "id": "banner_small",
        "label": "Banner Image (Mobile)",
        "info": "Recommended size 359x400 (px)"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Color",
		"default": "#FFF"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title",
        "default": "Sub Title"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Discover"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ]
  }
{% endschema %}