<section class="section-spacing">
  <div class="page-width">
    <div class="wrapper">
      <div class="col-image">
        {% assign banner_image = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <div class="image-wrapper absolute-image-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;">
          <img class="lazyload" 
               data-src="{{ banner_image }}" 
               data-widths="[180, 360, 375, 414, 540, 720]" 
               data-aspectratio="{{ section.settings.image.aspect_ratio }}" 
               data-sizes="auto"
               alt="" />
        </div>
      </div>
      <div class="col-content small--text-center">
        {% if section.settings.sub_title %}
        <span class="sub-title">{{ section.settings.sub_title }}</span>
        {% endif %}
        {% if section.settings.title %}
        <h2>{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.button_label and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn-arrow btn-arrow-small">
          {{ section.settings.button_label }}
          {% include 'icon-btn-arrow' %}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Feature row",
	"class": "gifts-feature-row",
    "settings": [
	  {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title",
        "default": "Sub Title"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Discover"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
	  {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Recommended size: 600px * 650px"
      }
	]
  }
{% endschema %}

