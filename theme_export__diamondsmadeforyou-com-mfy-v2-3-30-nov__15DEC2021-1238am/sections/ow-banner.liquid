{% include 'static-page-banner' %}

{% schema %}
  {
    "name": "Banner",
    "class": "static-page-banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section",
		"default": true
      },
      {
        "type": "image_picker",
        "id": "banner_large",
        "label": "Banner Image (Desktop)",
        "info": "Recommended size 1240x452 (px)"
      },
      {
        "type": "image_picker",
        "id": "banner_small",
        "label": "Banner Image (Mobile)",
        "info": "Recommended size 360x457 (px)"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color mobile",
		"default": "#F6E9E1"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Color",
		"default": "#F8F4F2"
      },
      {
        "type": "color",
        "id": "title_color_mob",
        "label": "Title Color (Mobile)",
		"default": "#000000"
      },
      {
        "type": "color",
        "id": "text_color_mob",
        "label": "Text Color (Mobile)",
		"default": "#2A3134"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Banner text goes here.</p>"
      }
    ]
  }
{% endschema %}