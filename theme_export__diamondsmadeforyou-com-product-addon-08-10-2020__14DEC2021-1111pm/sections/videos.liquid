<div class="image-with-video-overlay">
  <div class="container">
    <div class="video-wrapper visible-desktop">
      <a href="{{ section.settings.video_link }}">
        <video id="mydesktopVideo" autoplay="autoplay" loop="loop" preload playsinline muted>
          <source src="{{ section.settings.video }}" type="video/mp4" />
          Your browser does not support the video tag or the file format of this video.
        </video>
      </a>
    </div>
    <div class="video-wrapper visible-mobile">
      <a href="{{ section.settings.video_link }}">
        <video id="myVideo" autoplay="autoplay" loop="loop" preload playsinline muted>
          <source src="{{ section.settings.video_mob }}" type="video/mp4" />
          Your browser does not support the video tag or the file format of this video.
        </video>
      </a>
    </div>
  </div>
</div>
<script>
  var windowWidth = screen.width;
  if(windowWidth>767){
    var desktopVid = document.getElementById("mydesktopVideo");
    function desktopEnableAutoplay() { 
      desktopVid.autoplay = true;
      desktopVid.load();
    }
    desktopEnableAutoplay();
  }
  else{
    var vid = document.getElementById("myVideo");
    function enableAutoplay() { 
      vid.autoplay = true;
      vid.load();
    }
    enableAutoplay();
  }
</script> 
<style>
  .video-wrapper{
    position: relative;
    height: 0;
    overflow: hidden;
    padding-bottom: 31.25%;
    margin-bottom: 50px;
  }
  .video-wrapper video {
    position: absolute;
    width: 100%;
    height: 100%;
  }
  @media (min-width:768px){
    .visible-mobile{
      display:none;
    }
  }
  @media (max-width:767px){
    .visible-desktop{
      display:none;
    }
    .video-wrapper {
      padding-bottom: 39.25%;
      margin-bottom: 30px;
    }
  }
</style>
{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "textarea",
      "id": "video",
      "label": "Video url"
    },
	{
      "type": "textarea",
      "id": "video_mob",
      "label": "Mobile Video url"
    },
	{
	  "type": "url",
      "id": "video_link",
      "label": "Video link"
	}
  ],
  "presets": [
    {
      "name": "banner with video",
      "category": "Advanced layout"
    }
  ]
}
{% endschema %}

