<style>
  {% assign font_size_title =  section.settings.font_size_title %}
  {% assign margin_bottom =  section.settings.margin_bottom %}
   {% assign color_border = section.settings.color_border %}
  
  #banner-{{section.id}} .container {
    border-color:{{color_border}};
  }
  
  {% unless section.settings.enable_border%}
  #banner-{{section.id}} .container {
    border-top: none
  }
  {% endunless%}

  @media (max-width: 767px) {
    #banner-{{section.id}}  {
      margin-bottom: {{ section.settings.margin_bottom_mb }}px;
    }
    .block-four-banner .container .mansory-layout .item-2-height .no-image{
      position:relative;
    }
  }

  @media (min-width: 768px) and (max-width: 1199px) {
    #banner-{{section.id}}  {
      margin-bottom: {{ section.settings.margin_bottom_tab }}px;
    }
  }
  @media (max-width:1024px){
    .block-four-banner .container .mansory-layout .item-2-height .no-image{
      padding-top:0%!important;
    }
  }
  @media (min-width:1025px ) and (max-width:1199px){
    .block-four-banner .container .mansory-layout .item-2-height .no-image{
      padding-top:4%!important;
    }
  }
  @media (min-width: 1200px) {
    #banner-{{section.id}} .banner-title {
      font-size: {{ font_size_title }};
    }

    #banner-{{section.id}} {
      margin-bottom: {{ margin_bottom }}px;
    }
  }	
</style>
